package com.wisedu.cloud.smp.dal.spc.dao.impl;

import com.wisedu.cloud.smp.common.exception.DaoException;
import com.wisedu.cloud.smp.dal.spc.dao.SchoolAppServiceDao;
import com.wisedu.cloud.smp.dal.spc.mapper.SchoolAppServiceExtMapper;
import com.wisedu.cloud.smp.dal.spc.mapper.SchoolAppServiceMapper;
import com.wisedu.cloud.smp.dal.spc.model.SchoolAppService;
import com.wisedu.cloud.smp.dal.spc.model.SchoolAppServiceExample;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import java.util.List;

/**
 * Created by huangxuecan on 2016/3/7.
 */
@Repository("schoolAppServiceDao")
public class SchoolAppServiceDaoImpl implements SchoolAppServiceDao {

    @Autowired
    private SchoolAppServiceExtMapper schoolAppServiceExtMapper;

    @Autowired
    private SchoolAppServiceMapper schoolAppServiceMapper;

    @Override
    public void batchInsertSchoolAppService(List<SchoolAppService> schoolAppServices) throws DaoException {
        try {
            schoolAppServiceExtMapper.batchInsertSchoolAppService(schoolAppServices);
        } catch (Exception e) {
            throw new DaoException("",e);
        }
    }

    @Override
    public void delSchooAppServicephysical(SchoolAppServiceExample example) throws DaoException {
        try {
            schoolAppServiceMapper.deleteByExample(example);
        } catch (Exception e) {
            throw new DaoException("",e);
        }
    }

    @Override
    public void delSchoolAppService(SchoolAppServiceExample example) throws DaoException {
        try {
            SchoolAppService schoolAppService = new SchoolAppService();
            schoolAppService.setStatus((short) 1);
            schoolAppServiceMapper.updateByExampleSelective(schoolAppService,example);
        } catch (Exception e) {
            throw new DaoException("",e);
        }
    }


}
