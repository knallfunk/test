package com.wisedu.cloud.smp.biz.service.impl.api;

import com.wisedu.cloud.smp.biz.service.api.ApiShowService;
import com.wisedu.cloud.smp.common.exception.DaoException;
import com.wisedu.cloud.smp.common.exception.ServiceException;
import com.wisedu.cloud.smp.dal.sp.dao.ServiceCategoryDao;
import com.wisedu.cloud.smp.dal.sp.dao.ServiceDao;
import com.wisedu.cloud.smp.dal.sp.model.ServiceCategory;
import com.wisedu.cloud.smp.dal.sp.model.ServiceCategoryExample;
import com.wisedu.cloud.smp.dal.sp.model.extend.ServSearchCondition;
import com.wisedu.cloud.smp.dal.sp.model.extend.ServiceInfo;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.util.ArrayList;
import java.util.List;

/**
 * Created by huangxuecan on 2016/3/7.
 */
@Service("apiShowService")
public class ApiShowServiceImpl implements ApiShowService {

    @Autowired
    private ServiceDao serviceDao;

    @Autowired
    private ServiceCategoryDao serviceCategoryDao;

    @Override
    public List<ServiceCategory> getAllCategories() throws ServiceException{
        try {
            return serviceCategoryDao.getAllServiceCategories();
        } catch (DaoException e) {
            throw new ServiceException("",e);
        }
    }

    @Override
    public List<ServiceCategory> searchCategories(String categoryName) throws ServiceException {
        if(null == categoryName){
            return new ArrayList<>();
        }
        try {
            return serviceCategoryDao.selectServiceCateByName(categoryName);
        } catch (DaoException e) {
            throw new ServiceException("",e);
        }
    }

    @Override
    public List<ServiceInfo> getServiceInfoByCategoryId(Integer categoryId) throws ServiceException {
        if(null == categoryId || 0 == categoryId){
            return new ArrayList<>();
        }
        ServSearchCondition servSearchCondition = new ServSearchCondition();
        servSearchCondition.setCategoryId(categoryId);
        try {
            return serviceDao.getServicesByCondition(servSearchCondition);
        } catch (DaoException e) {
            throw new ServiceException("",e);
        }
    }

    @Override
    public List<ServiceInfo> searchServiceInfo(String serviceName) throws ServiceException {
        if(null == serviceName || "".equals(serviceName)){
            return new ArrayList<>();
        }
        ServSearchCondition servSearchCondition = new ServSearchCondition();
        servSearchCondition.setServiceName("%"+serviceName+"%");
        try {
            return serviceDao.getServicesByCondition(servSearchCondition);
        } catch (DaoException e) {
            throw new ServiceException("",e);
        }
    }


}
